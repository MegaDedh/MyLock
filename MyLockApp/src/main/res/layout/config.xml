<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">

    <Button
        android:id="@+id/btnCheckAccessibilityService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCheckAccessibilityService"
        android:text="Check Accessibility Service"/>

    <Button
        android:id="@+id/enableBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Enable Admin Device features"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:layout_below="@+id/btnCheckAccessibilityService"/>/>

    <Button
        android:id="@+id/disableBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Disable Admin Device features"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:layout_below="@id/enableBtn"/>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/disableBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="onClick"
        android:text="Add Widget" />

</RelativeLayout>
